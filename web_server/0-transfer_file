#!/usr/bin/env bash

# This script transfers a file from the client to a server using SCP.

# Check if the required number of arguments is provided
if [ "$#" -ne 4 ]; then
    echo "Usage: $0 PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
fi

# Assigning parameters to variables
FILE_PATH="$1"
SERVER_IP="$2"
USERNAME="$3"
SSH_KEY_PATH="$4"

# Check if the file exists
if [ ! -f "$FILE_PATH" ]; then
    echo "Error: File '$FILE_PATH' not found!"
    exit 1
fi

# Transfer the file using scp with strict host key checking disabled
scp -i "$SSH_KEY_PATH" -o StrictHostKeyChecking=no "$FILE_PATH" "$USERNAME@$SERVER_IP:~/"

# Check if the transfer was successful
if [ "$?" -eq 0 ]; then
    echo "File successfully transferred to $USERNAME@$SERVER_IP:~/"
else
    echo "File transfer failed!"
    exit 1
fi


